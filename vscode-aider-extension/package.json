{
    "name": "aider",
    "displayName": "Aider",
    "description": "VSCode extension for running Aider",
    "version": "0.0.5",
    "publisher": "MattFlower",
    "repository": {
        "type": "git",
        "url": "https://github.com/MattFlower/vscode-aider-extension"
    },
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Aider",
            "properties": {
                "aider.ignoreFiles": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "List of regexes that match filenames that won't automatically be added to the Aider terminal process."
                },
                "aider.openaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "OpenAI API Key."
                },
                "aider.commandLine": {
                    "type": "string",
                    "default": "aider",
                    "description": "Aider Command Line."
                }
            }
        },
        "commands": [
            {
                "command": "aider.add",
                "title": "Add File to Aider"
            },
            {
                "command": "aider.drop",
                "title": "Drop File from Aider"
            },
            {
                "command": "aider.syncFiles",
                "title": "Sync Open Files to Aider"
            },
            {
                "command": "aider.open",
                "title": "Open Aider"
            },
            {
                "command": "aider.close",
                "title": "Close Aider"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^7.0.2",
        "@types/node": "^12.11.1",
        "mocha": "^7.1.1",
        "tslint": "^5.12.1",
        "typescript": "^3.9.10",
        "vscode": "^1.1.37"
    }
}
